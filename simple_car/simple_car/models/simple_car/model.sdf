<?xml version="1.0"?>
<sdf version="1.6">
  <model name="simple_4wd_car">
    <static>false</static>

    <!-- Plugin diff_drive para movimento simples para frente -->
    <plugin name="diff_drive" filename="libgazebo_ros_diff_drive.so">
      <ros>
        <namespace>/</namespace>
        <remapping>cmd_vel:=/cmd_vel</remapping>
      </ros>
      <left_joint>rear_left_wheel_joint</left_joint>
      <right_joint>rear_right_wheel_joint</right_joint>
      <wheel_separation>0.4</wheel_separation>
      <wheel_diameter>0.1</wheel_diameter>
      <publish_odom>true</publish_odom>
      <publish_wheel_tf>true</publish_wheel_tf>
    </plugin>

    <!-- Base do carro -->
    <link name="base_link">
      <pose>0 0 0.1 0 0 0</pose>
      <collision name="base_collision">
        <geometry>
          <box>
            <size>0.6 0.4 0.1</size>
          </box>
        </geometry>
      </collision>
      <visual name="base_visual">
        <geometry>
          <box>
            <size>0.6 0.4 0.1</size>
          </box>
        </geometry>
      </visual>
    </link>

    <!-- Rodas -->
    <link name="front_left_wheel">
      <pose>0.25 0.2 0.05 0 1.5708 1.5708</pose>
      <visual name="fl_visual">
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
      </visual>
      <collision name="fl_collision">
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
      </collision>
    </link>

    <link name="front_right_wheel">
      <pose>0.25 -0.2 0.05 0 1.5708 1.5708</pose>
      <visual name="fr_visual">
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
      </visual>
      <collision name="fr_collision">
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
      </collision>
    </link>

    <link name="rear_left_wheel">
      <pose>-0.25 0.2 0.05 0 1.5708 1.5708</pose>
      <visual name="rl_visual">
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
      </visual>
      <collision name="rl_collision">
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
      </collision>
    </link>

    <link name="rear_right_wheel">
      <pose>-0.25 -0.2 0.05 0 1.5708 1.5708</pose>
      <visual name="rr_visual">
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
      </visual>
      <collision name="rr_collision">
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
      </collision>
    </link>

    <!-- Juntas das rodas -->
    <joint name="front_left_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>front_left_wheel</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>

    <joint name="front_right_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>front_right_wheel</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>

    <joint name="rear_left_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>rear_left_wheel</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>

    <joint name="rear_right_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>rear_right_wheel</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>
  </model>
</sdf>
